Port 22
AddressFamily any
ListenAddress 0.0.0.0
ListenAddress ::

HostKey /persistent/ssh-keys/etc/ssh/ssh_host_rsa_key
HostKey /persistent/ssh-keys/etc/ssh/ssh_host_ecdsa_key
HostKey /persistent/ssh-keys/etc/ssh/ssh_host_ed25519_key

PermitRootLogin yes
KbdInteractiveAuthentication no

UsePAM yes

PrintMotd no

# Allow client to pass locale environment variables
AcceptEnv LANG LC_*

# override default of no subsystems
#Subsystem	sftp	/usr/lib/openssh/sftp-server

